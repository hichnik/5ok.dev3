/* =============================================================================
   Btn
   ========================================================================== */
.btn
  display inline-block
  padding 8px 15px
  border 1px solid #222222
  border-radius 3px
  color #222222
  font-size 12px
  text-transform uppercase
  text-decoration none
  text-align center
  cursor pointer
  transition transition
  &:hover
    color #f0f0f0
    background #222222
  &.btn_golden
    padding 8px 15px
    background orange
    border none
    color #ffffff
    box-shadow inset 0 -15px 30px #f99014
    &:hover
      color #ffffff
      background orange
      box-shadow inset 0 15px 30px #f99014
  &.btn_purple
    padding 8px 15px
    background #ac5fb2
    border none
    color #ffffff
    box-shadow inset 0 -15px 30px #893891
    &:hover
      color #ffffff
      background #ac5fb2
      box-shadow inset 0 15px 30px #893891
  &.btn_gray
    padding 8px 15px
    background #888888
    border none
    color #ffffff
    box-shadow inset 0 -15px 30px #626262
    &:hover
      color #ffffff
      background #a1a1a1

.btn_input
  position relative
  z-index 1
  .submit
    absolute left top
    z-index 10
    width 100%
    height 100%
    opacity 0
    overflow hidden
    cursor pointer
    input
      position absolute
      z-index 10
      width auto !important
      height auto !important
      top 0
      right 0
      margin -2px !important
      font-size 200px !important
      cursor pointer

/* =============================================================================
