@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Roboto:400,300,700,300italic,400italic,700italic&subset=latin,cyrillic-ext,cyrillic');
roboto()
  font-family 'Roboto', Arial, Helvetica, sans-serif

@import url('http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700,300italic,400italic,700italic&subset=latin,cyrillic-ext,cyrillic');
robotoCond()
  font-family 'Roboto Condensed', Arial, Helvetica, sans-serif

@font-face {
  font-family: 'MyriadPro';
  src: url('fonts/myriadpro-regular.otf');
  font-weight: normal;
  font-style: normal
}
@font-face {
  font-family: 'MyriadPro Black';
  src: url('fonts/myriadpro-black.otf');
  font-weight: normal;
  font-style: normal
}
@font-face {
  font-family: 'MyriadPro Light';
  src: url('fonts/myriadpro-light.otf');
  font-weight: normal;
  font-style: normal
}

/*******************
* Variables
*******************/
tdur = 400ms
transition = all tdur

purple = #913f98
orange = #faa61a
green = #a6ce39
gray = #555555
blue = #110482

html, body
  height  100%

body
  roboto()
  margin 0
  color gray
  font-size 16px
  line-height 19px
img
  border none
.wrapper
  min-width 1160px
  width 100%
  /*min-height 100%*/
  /*height auto !important*/
  height 100%
  position relative
  z-index 2
.wrapper_inner
  min-height 100%
  position relative
  z-index 1
.max_width
  max-width 1160px
  margin auto

a
  color purple
  text-decoration none
  /*&:visited*/
  /*color #551a8b*/
  transition transition
  &:hover
    color #450043
  &:focus
    outline thin dotted
  &:hover,
  &:active
    outline 0

pre
  white-space pre
  white-space pre-wrap
  word-wrap break-word

img
  border 0
  -ms-interpolation-mode bicubic
  vertical-align middle

/* =============================================================================
   Forms
   ========================================================================== */
form
  margin 0
fieldset
  border 0
  margin 0
  padding 0

label
  cursor pointer

legend
  border 0
  padding 0
  white-space normal

button,
input,
select,
textarea
  font-family Arial, Helvetica, sans-serif
  font-size 100%
  margin 0
  vertical-align baseline
  outline none !important
  &:focus
    border-color cornflowerblue
  .form .error &
    color red

button,
input
  line-height normal

button,
input[type="button"],
input[type="reset"],
input[type="submit"]
  cursor pointer
  -webkit-appearance button

button[disabled],
input[disabled]
  cursor default

input[type="checkbox"],
input[type="radio"]
  box-sizing border-box
  padding 0

input[type="search"]
  -webkit-appearance textfield
  -moz-box-sizing content-box
  -webkit-box-sizing content-box
  box-sizing content-box

button::-moz-focus-inner,
input::-moz-focus-inner
  border 0
  padding 0
textarea
  overflow auto
  vertical-align top
  resize vertical

/* Colors for form validity */
input:valid, textarea:valid {  }
input:invalid,
textarea:invalid
  background-color #f0dddd

.form
  .field
    margin 0 0 20px
    &.error
      .error_txt
        display block
      input,
      textarea
        background #ffdbdb url(../images/input_error.png) right 7px no-repeat
    &.success
      input,
      textarea
        background url(../images/input_success.png) right 7px no-repeat
  .input_holder
    position relative
    padding 0 20px
    input,
    textarea
      display block
      width 100%
      padding 11px 17px
      border 1px solid #f3f3f3
      border-radius 3px
      margin 0 -20px
      background #ffffff
      font-size 14px
      line-height 17px
      letter-spacing .25px
      color #2a2a2a
      &[type='checkbox']
        padding 0
        background none
    textarea
      min-height 50px
  .placeholder
    absolute left top
    padding 12px 17px
    font-size 14px
    line-height 17px
    color #727272
    letter-spacing .25px
    cursor text
  .error_txt
    display none
    position absolute
    top 100%
    left 0
    margin 0 5px 0 5px
    font-size 12px
    line-height 15px
    color red
  .form_footer
    text-align center

/* =============================================================================
   Tables
   ========================================================================== */
table
  border-collapse collapse
  border-spacing 0
td
  vertical-align top
.dtable
  display table
.dtcell
  display table-cell
  vertical-align middle

/* =============================================================================
   Global elements
   ========================================================================== */
.inline-block
  displayinline-block
.none
  display none !important

.invisible
  visibility hidden
.hidden
  display none !important
  visibility hidden !important
.visible
  visibility visible !important

.clear
  clear both
  height 0
  font-size 0
  line-height 0
  overflow hidden
  display block
clearfix()
  zoom 1
  &:before,
  &:after
    content ""
    display table
  &:after
    clear both
.clearfix
  clearfix()

.fleft
  float left !important
.fright
  float right !important

.vat
  vertical-align top !important
.vam
  vertical-align middle !important
.vab
  vertical-align bottom !important

.tac
  text-align center !important
.tar
  text-align right !important
.uppercase
  text-transform uppercase !important

.not_select
  user-select none

