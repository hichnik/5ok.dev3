.contacts_page
  .tab_title
    p
      font-weight bold
  .contacts_block
    padding 20px
    background #f7f7f7
    > div
      margin 0 0 20px
      &:last-child
        margin-bottom 0
    .contacts_block_white
      position relative
      padding 15px 20px
      border-radius 3px
      border 1px solid #e6e6e6
      background #ffffff
      box-shadow 0 0 5px #eaeaea
      clearfix()
      &.no_map
        h3,.h3, p
          float none
    h3,.h3
      float left
      display block
      width 40%
      margin 0
      padding-right 10%
      font-size 12px
      text-transform uppercase
      font-weight bold
      color orange
    p
      float left
      display block
      width 40%
      padding-right 10%
      margin 10px 0 0
      font-size 12px
      font-weight 300
      color #000
      span
        display inline-block
        width 20px
      a
        text-decoration underline
        &:hover
          text-decoration none
    .contacts_map
      float right
      width 50%
      iframe
        width 100%
