.services_page
  position relative
  .tab_title
    p
      font-weight bold
  .services_block
    position relative
    margin-bottom 50px
    padding 10px
    background #f7f7f7
    clearfix()
    .services_item
      position relative
      float left
      display block
      width 520px
      height 157px
      margin 10px
      padding 15px 15px 45px 15px
      border-radius 3px
      overflow hidden
      background #ffffff
      box-shadow 0 0 5px #cacaca
    .photo
      position relative
      float left
      width 50px
      height 50px
      margin-right 10px
      overflow hidden
      img
        display block
        max-width 100%
        max-height 100%
    .title
      margin 0 0 10px
      font-size 16px
      text-transform uppercase
      color #000
      overflow hidden
    p
      margin 0
      font-size 12px
      line-height 14px
      text-align justify
      color #666666
    ul
      margin 0
      padding 0
      list-style-type none
      li
        position relative
        padding-left 9px
        font-size 12px
        line-height 14px
        color #666666
        &:before
          content " "
          absolute top 5px left
          width 4px
          height 4px
          border-radius 50%
          background #666666
    .btn
      absolute bottom 10px right 10px
      padding 5px 15px
