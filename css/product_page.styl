  .product_promo_block
    position relative
    height 60px
    margin-top 15px
    .promo_left
      absolute top left
      width 135px
      height 100%
      cursor pointer
      .hint
        background #fffef8
      &:hover
        .hint
          opacity 1
          visibility visible
    .promo_center
      absolute top left 145px
      right 130px
      height 58px
      border-radius 3px
      border 1px solid transparent
      &.darkpurple
        border-color #460043
      &.purple
        border-color #be5fc6
      &.orange
        border-color #f68e3b
      .badge
        float left
        margin-top 6px
      .icon_info
        absolute top right
        width 20px
        height 20px
        background url(../images/sprite.png) -280px 0 no-repeat
    .promo_right
      absolute top left 500px
      width 118px
      height 58px
      border 1px solid #dddddd
      border-radius 3px
      overflow hidden
      img
        absolute top left
        width 100%
        height auto
    .hint
      absolute bottom 100% left 50%
      z-index 11
      width 200px
      padding 10px
      margin 0 0 10px ((-@width / 2) - @padding)
      font-size 10px
      line-height 14px
      text-transform uppercase
      text-align center
      border 2px solid purple
      border-radius 3px
      background #ffffff
      cursor auto
      opacity 0
      visibility hidden
      transition transition
      &:before
        content " "
        absolute top 100% left
        width 100%
        height 20px
      &:after
        content " "
        absolute top 100% left 50%
        width 20px
        height 20px
        margin -2px 0 0 -10px
        background url(../images/sprite.png) -260px 0 no-repeat
      p
        margin 0
        color #555555
      span
        text-decoration underline
        color purple
        cursor pointer
        &:hover
          text-decoration none
    &.no_left
      .promo_left
        display none
      .promo_center
        left 0
    &.no_both
      .promo_left
      .promo_right
        display none
      .promo_center
        left 0
        right 0

    /* grand with image in central block */
    &.type_1
      .promo_center
        overflow hidden
        img
          width 100%
          height auto

    /* grand with live timer in central block */
    &.type_2
      .promo_center
        .ok_price
          absolute top 18px left 80px
          right 150px
          text-align center
          p
            display inline-block
            vertical-align top
            margin 0
            font-size 11px
            line-height 20px
            text-transform uppercase
            color orange
          .icon_info
            position relative
            display inline-block
            vertical-align top
        .live_timer
          absolute top 5px right 7px
      &.no_left
      &.no_both
        .ok_price p
          font-size 14px

    /* grand with slider in central block */
    &.type_3
      .promo_center
        .live_timer
          absolute top 5px right 22px
        .photo
          absolute top left 95px
          right 165px
          bottom 0
          width 65px
          margin 0 auto
          cursor pointer
          img
            absolute top left
            right 0
            bottom 0
            margin auto
            width 100%
            height auto
          &:hover
            .hint
              opacity 1
              visibility visible
          .hint_photo
            position relative
            width 80%
            margin 20px auto
            img
              position relative
            p
              margin 0 0 5px
              font-size 11px
              line-height 13px
              text-transform none
              text-align center
              color #555555
        .product_promo_info
          absolute top 5px left 75px
          width 185px
          bottom 5px
          background #eeeeee
          border-radius 3px
          .dtable
            width 100%
            height 100%
          p
            margin 0
            padding-left 10px
            font-size 9px
            line-height 14px
            text-transform uppercase
            color #555555
        .product_promo_slides
          absolute top left 105px
          right 175px
          bottom 0
          .photo
            left 40px
            right 40px
            opacity 0
            visibility hidden
            transition transition
            &.act
              opacity 1
              visibility visible
        .product_promo_controls
          absolute top 50% left 105px
          right 175px
          span
            position absolute
            width 40px
            height 40px
            margin-top (-@height / 2)
            cursor pointer
            background url(../images/sprite.png) no-repeat
            &.arr_left
              left 0
              background-position 0 -280px
            &.arr_right
              right 0
              background-position 0 -240px
      &.no_both
        .product_promo_slides
          .photo
            right auto
            cursor auto

