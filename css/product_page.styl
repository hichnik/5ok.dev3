  .product_gallery
    position relative
    width 100%
    height 610px
    border-radius 3px
    border-bottom 1px solid #dddddd
    overflow hidden
    .product_gallery_big
      position relative
      height 500px
      border-top 1px solid #dddddd
      border-left 1px solid #dddddd
      border-right 1px solid #dddddd
      border-top-left-radius 3px
      border-top-right-radius 3px
      overflow hidden
      &:after
        content " "
        absolute bottom left
        width 100%
        height 1px
        background #dddddd
      img
        absolute top left
        right 0
        bottom 0
        margin auto
      .product_gallery_zoom
        absolute bottom right
        width 60px
        height 60px
        margin 5px
        background url(../images/sprite.png) -40px -260px no-repeat
        cursor pointer
    .product_gallery_pager
      position relative
      height 110px
      padding-bottom 8px
      li
        position relative
        cursor pointer
        &:before
          content " "
          absolute bottom 100% left 50%
          border-left 8px solid transparent
          border-right 8px solid transparent
          border-bottom 8px solid #bbbbbb
          margin-left -8px
          display none
        div
          position relative
          width 110px
          height 110px
          overflow hidden
          &:after
            content " "
            absolute top right
            width 1px
            height 100%
            background #dddddd
          img
            absolute top left
            right 0
            bottom 0
            margin auto
            opacity 0.5
            transition transition
        &:first-child
          div:before
            content " "
            absolute top left
            width 1px
            height 100%
            background #dddddd
        &:hover
          div img
            opacity 1
        &.act
          div img
            opacity 1
          &:before
            display block
      .bx-wrapper
        .bx-viewport
          margin-top -8px
          padding-top 8px
        .bx-controls-direction
          .bx-prev
          .bx-next
            top 0
            margin-top 8px
            padding 5px 0
            width 39px
            height 100px
            background #f6f6f6 url(../images/sprite.png) no-repeat
            transition transition
            &:hover
              background-color #eeeeee
            &.disabled
              display block
              cursor default
              &:hover
                background-color #f6f6f6
          .bx-prev
            left -40px
            border-left 1px solid #dddddd
            background-position -140px -195px
          .bx-next
            right -40px
            border-right 1px solid #dddddd
            background-position -100px -195px

