.shipping_page
  position relative
  .tab_title
    p
      font-weight bold
    a
      display inline-block
      padding 0 10px
      font-size 12px
      font-weight 300
      text-transform uppercase
      text-decoration underline
      color #000
      &:hover
        text-decoration none
  .shipping_column
    width 550px
    margin-top 15px
    clearfix()
    &.left
      float left
    &.right
      float right

  .shipping_block
    padding-bottom 20px
    border-bottom 1px solid #ddd
    h3
      margin 16px 0 0
      font-size 14px
      line-height 16px
      font-weight 300
      text-transform uppercase
      color orange
      &:first-child
        margin-top 0
    p
      margin 16px 0 0
      font-size 12px
      line-height 14px
      font-weight 300
      text-align justify
      color #000
      &.uppercase
        margin 0 0 5px
      &.shipping_cashback
        font-weight normal
        text-transform uppercase
      &.mt_5
        margin-top 5px
      &:first-child
        margin-top 0
      b
        font-weight normal
        b
          font-weight bold
      a
        text-decoration underline
        &:hover
          text-decoration none
    table
      width 100%
      margin 16px 0 0
      &.wide_right
        td:first-child
          width 30%
      thead td
        font-size 10px
        line-height 15px
        text-transform uppercase
        color #ffffff
        background #888888
        border 1px solid #888888
        &:first-child
          border-right-color #ffffff
      td
        height 30px
        padding 0 5px
        vertical-align middle
        font-size 12px
        line-height 15px
        font-weight 300
        color #000
        border 1px solid #888888
        &:first-child
          width 70%
    .red_block
      position relative
      margin 15px 0 0
      padding 7px 5px 7px 30px
      border 1px dashed #e06565
      border-radius 3px
      &:before
        content " "
        absolute top 5px left 5px
        width 20px
        height 20px
        background url(../images/sprite.png) -340px -60px no-repeat
      p
        font-size 10px
        font-weight normal
        text-transform uppercase
        color #e06565
        &.color_black
          margin 8px 0 10px -20px
          font-size 12px
          font-weight 300
          text-transform none
          color #000
          &:last-child
            margin-bottom 0
    .red_text
      display inline-block
      margin 16px 0 0
      p
        padding 1px 5px 3px
        border-radius 3px
        font-weight normal
        color #ffffff
        background #e06565
    .orange_block
      margin 40px 0 0
      p
        font-size 12px
        font-weight normal
        text-transform uppercase
        color #fb6e00
        span
          font-size 16px
        b
          font-weight bold
    .link_purple
      display inline-block
      margin 40px 0 0
      font-size 10px
      text-transform uppercase
      color #913f98
      .icon
        margin -3px 0 0 3px









