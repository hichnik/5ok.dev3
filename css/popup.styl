.body_popup
  overflow-y scroll
  background-size cover
  .wrapper
    fixed left top
    overflow hidden
  .popup_holder
    z-index 100
    visibility visible
    overflow visible
.popup_holder
  absolute top left
  width 100%
  height 100%
  overflow hidden
  visibility hidden
  z-index 1
  .dtable
    width 100%
    height 100%
  .dtcell
    padding 10px
  .back
    fixed left top
    z-index 1
    width 100%
    height 100%
    background rgba(0,0,0,.5)
    .no-rgba &
      background url('../images/black_1px.png') repeat
.popup
  position relative
  z-index 3
  width 560px
  margin auto
  padding 15px
  border-radius 3px
  overflow hidden
  .popup_header
    background green
    padding @padding
    margin -@padding
    padding-bottom (@padding * 2)
    h2
      margin 0
      font-size 16px
      line-height 20px
      font-weight normal
      text-transform uppercase
      color #ffffff
  .close
    absolute top right
    width 20px
    height 20px
    margin 5px
    background url(../images/sprite.png) -420px 0 no-repeat
    cursor pointer
    &:hover
      transform rotate3d(1, 0, 0, 180deg)
      transition transition
  .popup_content
    background white
    padding @padding
    margin -@padding
    //margin-top 0
  .title
    font-size 16px
    line-height 20px
    text-transform uppercase
    text-align center
    .icon
      vertical-align top
      margin-right 3px
  p
    margin 10px 0 0
    font-size 12px

.popup_callback
  width 245px
  .title
    font-size 14px
  .callback_form_holder
    .field
      margin-bottom 15px
      .input_holder
        margin-top 5px
        padding 0 10px 0 7px
      input
        margin 0 -7px
        padding 5px 7px
        font-size 12px
        border-color #555555
    .field_phone
      margin-bottom 10px
      clearfix()
      .input_holder
        float left
        &.code
          width 25px
          margin-right 10px
        &.phone
          width 176px
    .submit
      input
        width 100%
        padding-left 0
        padding-right 0

.popup_login
  width 270px

.popup_forgot
  width 270px
  .pp_backtologin
    margin 5px 0 0

.popup_registration
  width 630px
  .title
    text-align left

.popup_credit_about
  width 780px
  .title
    text-align left
  table
    margin 15px 0 0
    width 100%
    td
      vertical-align middle
      width 80px
      padding 15px 10px
      border 1px solid #dddddd
      &:first-child
        width 130px
      &:last-child
        width 130px
        background #fffdf6
    thead
      robotoCond()
      font-size 12px
      font-weight 300
      text-transform uppercase
      color #000
      td
        background #f9f9f9
    tbody
      td
        font-size 13px
        line-height 14px
        text-align center
        &:first-child
          text-align left
          span
            color #777777
        &:last-child
          text-align center
          .btn
            width 100%
            margin 10px 0 0
            padding 8px 0
        .selecter
          text-align left
  .credit_banners
    margin 40px 0 0
    border 1px solid #dddddd
    > div
      position relative
      padding 10px
      border-bottom 1px solid #dddddd
      &:last-child
        border-bottom none
    .credit_bank
      width 200px
      height 30px
      overflow hidden
      img
        display block
        width auto
        height 100%
    p
      margin 10px 0 0
      width 510px
      font-size 11px
      line-height 13px
      color #777777
    h3
      absolute top 15px right 260px
      width 300px
      margin 0
      font-size 24px
      line-height 24px
      font-weight 300
      text-align right
      color #000
      &:after
        content " "
        absolute top left 100%
        width 60px
        height 60px
        margin -10px 20px
        background url(../images/sprite.png) -200px -140px no-repeat
    .btn
      absolute top 50% right 10px
      width 145px
      margin-top -15px
      padding 8px 0

.popup_credit_make
  width 440px
  .title
    text-align left
  .form
