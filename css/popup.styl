.popup_product_gallery
  width 1100px
  height 100%
  .popup_content
    position relative
    height 100%
    min-height 700px
  .title
    text-align left
  .product_gallery_inpopup
    absolute top 35px left 15px
    right 255px
    bottom 15px
    margin 10px 0 0
    border 1px solid #dddddd
    .photo
      absolute top 20px left 20px
      right 20px
      bottom 20px
      img
      iframe
        display block
        absolute top left
        right 0
        bottom 0
        max-height 100%
        max-width 100%
        margin auto
  .gallery_sideinfo
    absolute top 45px right 15px
    bottom 15px
    width 220px
    .product_code_inpopup
      absolute top left 50%
      width 150px
      margin -28px -75px
      border-radius 3px
      font-size 10px
      text-transform uppercase
      text-align center
      color #000
      background #eaeaea
  .product_buy_block
    position relative
    float none
    width 100%
    overflow hidden
    .product_buy_title
      height 25px
      font-size 10px
      line-height 25px
      text-transform uppercase
      text-align center
      color #ffffff
      border-top-left-radius 3px
      border-top-right-radius 3px
      &.green
        background green
      &.gray
        background gray
    .product_buy_body
      position relative
      height 230px
      padding 0
      text-align center
      border-left 1px solid #dddddd
      border-right 1px solid #dddddd
      border-bottom 1px solid #dddddd
      border-bottom-left-radius 3px
      border-bottom-right-radius 3px
      background #fffdf6
      .product_buy_discount
        padding 20px 0 0
        font-size 12px
        text-align center
        color #be5fc6
        span
          position relative
          color #888888
          &:after
            content " "
            absolute top 50% left
            width 100%
            height 1px
            background #888888
          &.uppercase
            font-size 9px
            color #be5fc6
            &:after
              display none
      .product_buy_price
        margin 20px 0 0
        font-size 11px
        text-align center
        color #000
        span
          font-size 36px
          font-weight bold
      .btn_buy
        display block
        width 160px
        margin 15px auto 0
        padding 15px 0
        font-size 18px
      .btn_credit
        display block
        width 160px
        margin 8px auto 0
        padding 3px 0
      .favorite_add
        float none
        display inline-block
        margin-top 7px
  .product_gallery_inpopup_mini
    absolute top 270px right
    bottom 0
    width 100%
    overflow auto
    padding 10px
    div
      position relative
      width 120px
      height 120px
      margin 0 auto 20px
      cursor pointer
      &:last-child
        margin-bottom 0
      &:before
        content " "
        absolute top 50% right 100%
        margin-top -8px
        border-top 8px solid transparent
        border-right 8px solid #bbbbbb
        border-bottom 8px solid transparent
        display none
      &:after
        content " "
        absolute top left
        width 100%
        height 100%
        border 1px solid #bbbbbb
        display none
      &:hover
        img
          opacity 1
        &:after
          display block
      &.act
        img
          opacity 1
        &:before
        &:after
          display block
      img
        display block
        absolute top left
        right 0
        bottom 0
        margin auto
        opacity 0.5
        transition transition
